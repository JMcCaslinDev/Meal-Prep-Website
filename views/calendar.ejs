<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link href="/css/calendar.css" rel="stylesheet">
  <title>Meal Calendar</title>
</head>

<body>
  <%- include("partials/navbar.ejs") %>

  <div class="week-selector">
    <button id="prev-week">Previous Week</button>
    <select id="week-select">
      <% for (let i = 0; i <= 52; i++) { %>
        <option value="<%= i %>">Week <%= i %></option>
      <% } %>
    </select>
    <button id="next-week">Next Week</button>
  </div>

  <div class="calendar-container">
    <% const days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday']; %>
    <% days.forEach(day => { %>
      <div class="day-column">
        <div class="day-header"><%= day %></div>
        <!-- Placeholder for meals, to be populated by calendar.js -->
      </div>
    <% }) %>
  </div>

  <button id="save-button" class="save-button">Save</button>

  <script src="/js/calendar.js"></script>
</body>
</html>
