<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/main.css" rel="stylesheet">
  <title>My Fridge</title>
</head>

<body>
  <%- include("partials/navbar.ejs") %>
  <div class="container mt-4">
    <h1>My Fridge</h1>
    <div id="fridge-items-container"></div>
  </div>

  <!-- Fridge Modal -->
  <div id="item-modal" class="modal fridge-modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Edit Fridge Item</h2>
      <form id="edit-item-form">
        <input type="hidden" id="fridge-id">
        <div class="mb-3">
          <label for="item-name" class="form-label">Item Name</label>
          <input type="text" class="form-control" id="item-name" required>
        </div>
        <div class="mb-3">
          <label for="item-quantity" class="form-label">Quantity</label>
          <input type="number" class="form-control" id="item-quantity" required>
        </div>
        <div class="mb-3">
          <label for="item-unit" class="form-label">Unit</label>
          <input type="text" class="form-control" id="item-unit" required>
        </div>
        <div class="mb-3">
          <label for="item-expiry" class="form-label">Expiry Date</label>
          <input type="date" class="form-control" id="item-expiry">
        </div>
        <div class="mb-3">
          <label for="shopping-list-id" class="form-label">Shopping List ID</label>
          <input type="number" class="form-control" id="shopping-list-id">
        </div>
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="is-opened">
          <label class="form-check-label" for="is-opened">Is Opened</label>
        </div>
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="is-leftover">
          <label class="form-check-label" for="is-leftover">Is Leftover</label>
        </div>
        <button type="button" class="btn btn-danger" id="delete-item-btn">Delete Item</button>
      </form>
    </div>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/js/fridge.js"></script>
</body>
</html>
